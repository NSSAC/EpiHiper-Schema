{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Initializations",
  "description": "A schema describing the initializations at the start of  EpiHiper",
  "type": "object",
  "required": ["initializations"],
  "properties": {
    "sets": {
      "type": "array",
      "items": [
        {"$ref": "./typeRegistry.json#/definitions/set"}
      ]
    },
    "initializations": {
      "description": "The propertyName description",
      "type": "array",
      "items": {
        "description": "",
        "type": "object",
        "allOf": [
          {"$ref": "./typeRegistry.json#/definitions/annotation"},
          {
            "type": "object",
            "required": ["selector"],
            "properties": {
              "selector": {
                "allOf": [
                  {"$ref": "./typeRegistry.json#/definitions/annotation"},
                  {"$ref": "./typeRegistry.json#/definitions/setContent"}
                ]
              }
            }
          },
          {"$ref": "./typeRegistry.json#/definitions/actionEnsemble"}
        ]
      }
    }
  }
}