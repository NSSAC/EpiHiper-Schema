{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Interventions",
  "description": "A schema describing the interventions allowed in EpiHiper",
  "type": "object",
  "required": ["interventions"],
  "properties": {
    "sets": {
      "type": "array",
      "items": [
        {"$ref": "./typeRegistry.json#/definitions/set"}
      ]
    },
    "globalVariables": {
      "description": "The propertyName description",
      "type": "array",
      "items": {
        "allOf": [
          {"$ref": "./typeRegistry.json#/definitions/annotation"},
          {
            "type": "object",
            "required": ["id"],
            "properties": {
              "id": {"$ref": "./typeRegistry.json#/definitions/uniqueId"},
              "initialValue": {"$ref": "./typeRegistry.json#/definitions/nonNegativeInteger"},
              "reset": {"$ref": "./typeRegistry.json#/definitions/nonNegativeInteger"},
              "selector": {"$ref": "./typeRegistry.json#/definitions/setContent"}
            },
            "patternProperties": {
              "^ann:": {}
            },
            "additionalProperties": false
          }
        ]
      }
    },
    "interventions": {
      "description": "The propertyName description",
      "type": "array",
      "items": {
        "description": "",
        "type": "object",
        "allOf": [
          {"$ref": "./typeRegistry.json#/definitions/annotation"},
          {
            "type": "object",
            "required": ["triggers"],
            "properties": {
              "triggers": {
                "description": "",
                "type": "array",
                "minItems": 1,
                "items": {"$ref": "./typeRegistry.json#/definitions/condition"}
              }
            }
          },
          {
            "type": "object",
            "required": ["selector"],
            "properties": {
              "selector": {
                "allOf": [
                  {"$ref": "./typeRegistry.json#/definitions/annotation"},
                  {"$ref": "./typeRegistry.json#/definitions/setContent"}
                ]
              }
            }
          },
          {"$ref": "./typeRegistry.json#/definitions/actionEnsemble"}
        ]
      }
    }
  }
}